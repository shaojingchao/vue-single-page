<!-- 解答题 -->
<div class="lay-normal-box lay-edit-paper-info">
    <div class="lay-set form">
        <div class="item-content">
            <div class="itm-item">
                <span class="item-name">题型：</span>
                <input class="w-full" type="text" value="解答题">
                <!-- <span class="ml8 view-title"><i class="iconfont">&#xe607;</i>显示</span> -->
                <!-- <span class="ml8 view-title"><i class="iconfont">&#xe606;</i>隐藏</span> -->
            </div>
            <div class="itm-item">
                <span class="item-name">添加题数：</span>
                <select class="w6em" name="" id="">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select><span class="ml8">题</span>
                <!-- <span>
                    <input class="w12em" type="text" value="1">
                </span> -->
            </div>
            <div class="itm-item">
                <span class="item-name">设置：</span>
                <div class="explain-info">
                    <ul class="tab-item">
                        <li class="on">第一题</li>
                        <li>第二题</li>
                        <li>第三题</li>
                    </ul>
                    <div class="con-item">
                        <div class="con-item-list">
                            <div class="itm-item">
                                <span class="item-name">类型：</span>
                                <span class="type-select">
                                    <label>
                                        <input type="radio" checked="" name="" id="" value="1">
                                        <span class="radio-img on-line">带横线</span>
                                    </label>
                                    <label>
                                        <input type="radio" name="" id="" value="1">
                                        <span class="radio-img no-line">不带横线</span>
                                    </label>
                                </span>
                            </div>
                            <div class="itm-item">
                                <span class="item-name">分数：</span>
                                <span>
                                    <input class="w12em" type="text" value="20"><span class="ml8">分</span>
                                </span>
                            </div>
                            <div class="itm-item">
                                <span class="item-name">空行数：</span>
                                <span>
                                    <input class="w12em" type="text" value="10"><span class="ml8">行</span>
                                </span>
                            </div>
                            <div class="itm-item">
                                <span class="item-name">图片：</span>
                                <span class="type-select">
                                    <label><input type="radio" checked="" name="" id="" value="">无</label>
                                    <label><input type="radio" name="" id="" value="">选用试题图片</label>
                                    <label><input type="radio" name="" id="" value="">上传</label>
                                </span>
                                <span><input type="file"></span></span>
                            </div>
                            <div class="itm-item">
                                <span class="item-name">添加小题：</span>
                                <span class="type-select">
                                    <label><input type="radio" checked="" name="" id="" value="1">否</label>
                                    <label><input type="radio" name="" id="" value="2">是</label>
                                </span>
                            </div>
                            <div class="itm-item">
                                <span class="item-name"></span>
                                <span class="type-select">
                                    <span class="ml8">添加</span>
                                    <input class="w6em" type="text" value="20">
                                    <span class="ml8">小题</span>
                                </span>
                                <span class="type-select">
                                    <span class="ml8">第(1)小题</span>
                                    <input class="w6em" type="text" value="5">
                                    <span class="ml8">行</span>
                                </span>
                                <span class="type-select">
                                    <span class="ml8">第(1)小题</span>
                                    <input class="w6em" type="text" value="5">
                                    <span class="ml8">行</span>
                                </span>
                            </div>
                            <div class="itm-item">
                                <span class="item-name">添加描述：</span>
                                <span class="type-select">
                                    <label><input type="radio" checked="" name="" id="" value="1">否</label>
                                    <label><input type="radio" name="" id="" value="2">是</label>
                                </span>
                                <textarea class="w-full"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
